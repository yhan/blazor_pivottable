        await base.OnInitializedAsync();
        this.Data = PollingService.Instance.Observable;

        if (!registered)
        {
            PollingService.Instance.UnRegisterAll();
            PollingService.Instance.Register(GetHashCode(), UpdateData);
            registered = true;
        }

